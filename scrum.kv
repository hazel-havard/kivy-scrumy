#:kivy 1.7.1

ScrumScreenManager:

<ScrumScreenManager>:

<LoginScreen>:
    name: 'login'
    scrumIdInput: scrum_id_input
    passwordInput: password_input

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Scrum'
            font_size: 48
            size_hint_y: None
            height: '200dp'

        GridLayout:
            cols: 2
            padding: '10dp'
            spacing: '10dp'
            row_default_height: '40dp'
            row_force_default: True

            Label:
                text: 'Scrum name:'
                halign: 'right'
                valign: 'middle'
                text_size: self.size

            TextInput:
                multiline: False
                size_hint_x: None if root.width > 600 else 1
                width: '200dp'
                id: scrum_id_input

            Label:
                text: 'Password:'
                halign: 'right'
                valign: 'middle'
                text_size: self.size

            TextInput:
                multiline: False
                password: True
                width: '200dp'
                id: password_input

        Button:
            text: 'Login'
            size_hint_y: None
            height: '40dp'
            on_press: root.login()

<StickyNote>:
	orientation: 'vertical'
    size_hint: None, None
    size: '100dp', '100dp'
	canvas.before:
		Color:
			rgba: 1, 0, 0, 1
		Rectangle:
			pos: self.pos
			size: self.size
	
	Label:
		text: 'Task'
        font_size: '12dp'
        size_hint_y: .8
        text_size: self.size
        valign: 'top'
        halign: 'center'
	Label:
		text: 'Person'
        font_size: '10dp'
        size_hint_y: .2
	
<TitleLabel>:
    font_size: '14dp'
    size_hint: None, None
    size: '220dp', '50dp'
    italic: True

<GridData>:
    cols: 2
    size_hint: None, None
    size: '220dp', '120dp'
    padding: '10dp'
    spacing: '10dp'
	
<MainScreen>:
    name: 'main'
    ScrollView:
    	BoxLayout:
    		orientation: 'vertical'
            size_hint: None, None
            width: main_grid.width
            height: '400dp'
    		
    		Label:
    			text: 'Scrum'
                font_size: '16dp'
                text_size: self.size
                valign: 'middle'
                halign: 'left'
                size_hint_y: None
                height: '30dp'
    			
    		GridLayout:
                id: main_grid
    			cols: 5
                size_hint_x: None
                width: '1100dp'
    			
    			TitleLabel:
    				text: 'Stories'
    			TitleLabel: 
    				text: 'To Do'
    			TitleLabel:
    				text: 'In Progress'
    			TitleLabel:
    				text: 'Verify'
    			TitleLabel:
    				text: 'Completed'
    			
    			TitleLabel: 
    				text: 'Story 1'
    			GridData:
    				StickyNote:
    				StickyNote:
    			GridData:
    			GridData:
    			GridData:
    				
    			TitleLabel: 
    				text: 'Story 2'
    			GridData:
    			GridData:
    			GridData:
    				StickyNote:
    				StickyNote:
    			GridData:
