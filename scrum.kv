#:kivy 1.7.1

ScrumScreenManager:

<ScrumScreenManager>:

<LoginScreen>:
    name: 'login'
    scrumIdInput: scrum_id_input
    passwordInput: password_input

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Scrum'
            font_size: 48
            size_hint_y: None
            height: '200dp'

        GridLayout:
            cols: 2
            padding: '10dp'
            spacing: '10dp'
            row_default_height: '40dp'
            row_force_default: True

            Label:
                text: 'Scrum name:'
                halign: 'right'
                valign: 'middle'
                text_size: self.size

            TextInput:
                multiline: False
                size_hint_x: None if root.width > 600 else 1
                width: '200dp'
                id: scrum_id_input

            Label:
                text: 'Password:'
                halign: 'right'
                valign: 'middle'
                text_size: self.size

            TextInput:
                multiline: False
                password: True
                width: '200dp'
                id: password_input

        Button:
            text: 'Login'
            size_hint_y: None
            height: '40dp'
            on_press: root.login()

<StickyNote>
	orientation: 'vertical'
	canvas.before:
		Color:
			rgba: 1, 0, 0, 1
		Rectangle:
			pos: self.pos
			size: self.size
	
	Label:
		text: 'Task'
	Label:
		text: 'Person'
	
	
<MainScreen>
    name: 'main'
    ScrollView:
    	BoxLayout:
    		orientation: 'vertical'
    		
    		Label:
    			text: 'Scrum'
    			
    		GridLayout:
    			cols: 5
    			
    			Label:
    				text: 'Stories'
    			Label: 
    				text: 'To Do'
    			Label:
    				text: 'In Progress'
    			Label:
    				text: 'Verify'
    			Label:
    				text: 'Completed'
    			
    			Label: 
    				text: 'Story 1'
    			GridLayout:
    				cols: 2
    				StickyNote:
    				StickyNote:
    			GridLayout:
    				cols: 2
    			GridLayout:
    				cols: 2
    			GridLayout:
    				cols: 2
    				
    			Label: 
    				text: 'Story 2'
    			GridLayout:
    				cols: 2
    			GridLayout:
    				cols: 2
    			GridLayout:
    				cols: 2
    				StickyNote:
    				StickyNote:
    			GridLayout:
    				cols: 2
    			
    				
