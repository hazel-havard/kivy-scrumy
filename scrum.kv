#:kivy 1.7.1

ScrumScreenManager:

<ScrumScreenManager>:

<LoginScreen>:
    name: 'login'
    scrumIdInput: scrum_id_input
    passwordInput: password_input

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Scrum'
            font_size: 24
            size_hint_y: .1

        GridLayout:
            cols: 2

            Label:
                text: 'Scrum name:'

            TextInput:
                multiline: False
                id: scrum_id_input
                height: 20

            Label:
                text: 'Password:'

            TextInput:
                multiline: False
                password: True
                id: password_input
                height: 20

        Button:
            text: 'Login'
            on_press: root.login()

<StickyNote>
	orientation: 'vertical'
	canvas.before:
		Color:
			rgba: 1, 0, 0, 1
		Rectangle:
			pos: self.pos
			size: self.size
	
	Label:
		text: 'Task'
	Label:
		text: 'Person'
	
	
<MainScreen>
    name: 'main'
    ScrollView:
    	BoxLayout:
    		orientation: 'vertical'
    		
    		Label:
    			text: 'Scrum'
    			
    		GridLayout:
    			cols: 5
    			
    			Label:
    				text: 'Stories'
    			Label: 
    				text: 'To Do'
    			Label:
    				text: 'In Progress'
    			Label:
    				text: 'Verify'
    			Label:
    				text: 'Completed'
    			
    			Label: 
    				text: 'Story 1'
    			GridLayout:
    				cols: 2
    				StickyNote:
    				StickyNote:
    			GridLayout:
    				cols: 2
    			GridLayout:
    				cols: 2
    			GridLayout:
    				cols: 2
    				
    			Label: 
    				text: 'Story 2'
    			GridLayout:
    				cols: 2
    			GridLayout:
    				cols: 2
    			GridLayout:
    				cols: 2
    				StickyNote:
    				StickyNote:
    			GridLayout:
    				cols: 2
    			
    				
